inc stdlib.slm
inc mem.slm

class log
  prop Id   int.SIZE
  prop Crit 1
  prop Hint 4
  prop Mes  0
 
  var idtemp int.SIZE
  var curlog 128

  {
  args: bool[crit] int[id]
  result:

  sets the log level for logs
  }
  proc level 2 0
    log.curlog
    log.Id .
    swap put disc

    log.curlog
    log.Crit . 
    swap putc disc
  
    ret
  end

  proc msg 2 0
    log.curlog
    log.Mes . (cstr.clear)
    swap
    (cstr.copy) disc disc
    
    log.curlog
    log.Hint . swap
    3
    (mem.copy)

    ret
  end

  proc cat 1 0
    log.curlog
    log.Mes . swap (cstr.cat) disc

    ret
  end

  proc log 0 0
    log.curlog
    log.Crit . readc
    if [
      "\e[1;31m" (cstr.print)
      "[" (cstr.print)
      log.curlog
      log.Hint . (cstr.print)
      "]\ " (cstr.print)
      log.curlog
      log.Mes . (cstr.print)
      "\e[0;0m" (cstr.println)

      0 log.Id - quit
    ]
    "[" (cstr.print)
    log.curlog
    log.Hint . (cstr.print)
    "]\ " (cstr.print)
    log.curlog

    log.Mes . (cstr.println)

    ret
  end
end

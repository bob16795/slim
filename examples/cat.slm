inc stdlib.slm
inc os.slm

var inputfd 8
var inputbuffer 129

proc main 0 0
  0
  do
    1 +
    copy (os.args)
    0 swap 0 swap
    -100
    (os.open)
    inputfd swap put disc
    do
      127
      inputbuffer (cstr.clear)
      inputfd read (os.read)
      inputbuffer (cstr.print)
      0 !=
    end
    inputfd read (os.close)
  end

  ret
end
